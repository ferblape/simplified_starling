Example
=======

    ##
    # app/controllers/typus/newsletters_controller.rb
    #
    class Typus::NewslettersController < TypusController
    
      def test
        Newsletter.find(params[:id]).push('test_rendering')
      end
    
    end

    ##
    # app/models/newsletter.rb
    #
    class Newsletter < ActiveRecord::Base
    
      ##
      # Your task
      #
      def test_rendering
      end
    
    end

